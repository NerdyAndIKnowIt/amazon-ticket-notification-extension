{
    "manifest_version": 2,
    
    "name": "Ticket Notifier",
    "description": "Amazon OpsTech IT ticket notification extension. Created by Breanna Chase, released 6/30/2022.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "64": "icon.png"
    },
    "content_scripts": [
        {    
            "matches": ["https://t.corp.amazon.com/issues/*"],
            "js": ["content.js"]
        }
    ]
}